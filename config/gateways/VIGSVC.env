# =============================================================================
# VIGSVC Gateway Configuration
# Service Gateway - Central service and coordination gateway
# =============================================================================

# Gateway Identity
GATEWAY_NAME=VIGSVC
GATEWAY_DISPLAY_NAME=VIG Service
GATEWAY_DESCRIPTION=Service gateway for central coordination and services
GATEWAY_ENVIRONMENT=production

# Container Configuration
CONTAINER_NAME=ignition-sandbox_vigsvc_1
CONTAINER_HOSTNAME=vigsvc
SERVICE_NAME=vigsvc

# Port Configuration (IP-based allocation)
HTTP_PORT=8073
HTTPS_PORT=8473
GAN_PORT=8673
TRACE_PORT=10073
METRICS_PORT=11073

# =============================================================================
# IGNITION GATEWAY CONFIGURATION
# =============================================================================

# Core Ignition Settings
ACCEPT_IGNITION_EULA=Y
TZ=America/Boise
GATEWAY_ADMIN_USERNAME=admin
GATEWAY_ADMIN_PASSWORD=password
DISABLE_QUICKSTART=true
GATEWAY_SYSTEM_NAME=VIGSVC
GATEWAY_USESSL=false
GATEWAY_NETWORK_AUTOACCEPT_DELAY=3
GATEWAY_DEBUG_ENABLED=1
GATEWAY_MAX_MEMORY=1024
IGNITION_DATASOURCE_AUTOSTART=false
IGNITION_MODULES_ENABLED=false
IGNITION_DEVICE_CONNECTIONS_ENABLED=false
IGNITION_OPC_UA_SERVER_ENABLED=false

# =============================================================================
# GATEWAY-TO-GATEWAY CONNECTIONS (VIGSVC connects to VIGVIS)
# =============================================================================

# Connection to VIGVIS
GATEWAY_NETWORK_0_HOST=VIGVIS
GATEWAY_NETWORK_0_PORT=8071
GATEWAY_NETWORK_0_PINGRAT=0
GATEWAY_NETWORK_0_ENABLED=true
GATEWAY_NETWORK_0_ENABLESSL=false