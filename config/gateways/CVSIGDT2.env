# =============================================================================
# CVSIGDT2 Gateway Configuration
# CVS Integration Gateway 2 - Secondary CVS data integration
# =============================================================================

# Gateway Identity
GATEWAY_NAME=CVSIGDT2
GATEWAY_DISPLAY_NAME=CVS Integration Gateway 2
GATEWAY_DESCRIPTION=Secondary CVS integration gateway for data collection
GATEWAY_ENVIRONMENT=production

# Container Configuration
CONTAINER_NAME=ignition-sandbox_cvsigdt2_1
CONTAINER_HOSTNAME=cvsigdt2
SERVICE_NAME=cvsigdt2

# Port Configuration (IP-based allocation)
HTTP_PORT=8052
HTTPS_PORT=8452
GAN_PORT=8652
TRACE_PORT=10052
METRICS_PORT=11052

# =============================================================================
# IGNITION GATEWAY CONFIGURATION
# =============================================================================

# Core Ignition Settings
ACCEPT_IGNITION_EULA=Y
TZ=America/Boise
GATEWAY_ADMIN_USERNAME=admin
GATEWAY_ADMIN_PASSWORD=password
DISABLE_QUICKSTART=true
GATEWAY_SYSTEM_NAME=CVSIGDT2
GATEWAY_USESSL=false
GATEWAY_NETWORK_AUTOACCEPT_DELAY=3
GATEWAY_DEBUG_ENABLED=1
GATEWAY_MAX_MEMORY=1024
IGNITION_DATASOURCE_AUTOSTART=false
IGNITION_MODULES_ENABLED=false
IGNITION_DEVICE_CONNECTIONS_ENABLED=false
IGNITION_OPC_UA_SERVER_ENABLED=false

# =============================================================================
# GATEWAY-TO-GATEWAY CONNECTIONS (CVSIGDT2 connects to VIGSVC)
# =============================================================================

# Connection to VIGSVC
GATEWAY_NETWORK_6_HOST=VIGSVC
GATEWAY_NETWORK_6_PORT=8073
GATEWAY_NETWORK_6_PINGRAT=0
GATEWAY_NETWORK_6_ENABLED=true
GATEWAY_NETWORK_6_ENABLESSL=false