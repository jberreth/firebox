# =============================================================================
# VIGVIS Gateway Configuration  
# Visualization Gateway - HMI and dashboard visualization
# =============================================================================

# Gateway Identity
GATEWAY_NAME=VIGVIS
GATEWAY_DISPLAY_NAME=VIG Visualization
GATEWAY_DESCRIPTION=Visualization gateway for HMI and dashboard displays
GATEWAY_ENVIRONMENT=production

# Container Configuration
CONTAINER_NAME=ignition-sandbox_vigvis_1
CONTAINER_HOSTNAME=vigvis
SERVICE_NAME=vigvis

# Port Configuration (IP-based allocation)
HTTP_PORT=8071
HTTPS_PORT=8471
GAN_PORT=8671
TRACE_PORT=10071
METRICS_PORT=11071

# =============================================================================
# IGNITION GATEWAY CONFIGURATION
# =============================================================================

# Core Ignition Settings
ACCEPT_IGNITION_EULA=Y
TZ=America/Boise
GATEWAY_ADMIN_USERNAME=admin
GATEWAY_ADMIN_PASSWORD=password
DISABLE_QUICKSTART=true
GATEWAY_SYSTEM_NAME=VIGVIS
GATEWAY_USESSL=false
GATEWAY_NETWORK_AUTOACCEPT_DELAY=3
GATEWAY_DEBUG_ENABLED=1
GATEWAY_MAX_MEMORY=1024
IGNITION_DATASOURCE_AUTOSTART=false
IGNITION_MODULES_ENABLED=false
IGNITION_DEVICE_CONNECTIONS_ENABLED=false
IGNITION_OPC_UA_SERVER_ENABLED=false

# =============================================================================
# GATEWAY-TO-GATEWAY CONNECTIONS (VIGVIS connects to all other gateways)
# =============================================================================

# Connection to CVSIGDT1
GATEWAY_NETWORK_1_HOST=CVSIGDT1
GATEWAY_NETWORK_1_PORT=8051
GATEWAY_NETWORK_1_PINGRAT=0
GATEWAY_NETWORK_1_ENABLED=true
GATEWAY_NETWORK_1_ENABLESSL=false

# Connection to CVSIGDT2
GATEWAY_NETWORK_2_HOST=CVSIGDT2
GATEWAY_NETWORK_2_PORT=8052
GATEWAY_NETWORK_2_PINGRAT=0
GATEWAY_NETWORK_2_ENABLED=true
GATEWAY_NETWORK_2_ENABLESSL=false

# Connection to VIGDS3
GATEWAY_NETWORK_3_HOST=VIGDS3
GATEWAY_NETWORK_3_PORT=8053
GATEWAY_NETWORK_3_PINGRAT=0
GATEWAY_NETWORK_3_ENABLED=true
GATEWAY_NETWORK_3_ENABLESSL=false

# Connection to VIGDS4
GATEWAY_NETWORK_4_HOST=VIGDS4
GATEWAY_NETWORK_4_PORT=8054
GATEWAY_NETWORK_4_PINGRAT=0
GATEWAY_NETWORK_4_ENABLED=true
GATEWAY_NETWORK_4_ENABLESSL=false

# Connection to VIGDEV
GATEWAY_NETWORK_5_HOST=VIGDEV
GATEWAY_NETWORK_5_PORT=8070
GATEWAY_NETWORK_5_PINGRAT=0
GATEWAY_NETWORK_5_ENABLED=true
GATEWAY_NETWORK_5_ENABLESSL=false

# Connection to VIGSVC
GATEWAY_NETWORK_6_HOST=VIGSVC
GATEWAY_NETWORK_6_PORT=8073
GATEWAY_NETWORK_6_PINGRAT=0
GATEWAY_NETWORK_6_ENABLED=true
GATEWAY_NETWORK_6_ENABLESSL=false

# Data Volumes
GATEWAY_DATA_DIR=/opt/ignition-sandbox/gateways/VIGVIS/VIGVIS-data
GATEWAY_LOGS_DIR=/opt/ignition-sandbox/gateways/VIGVIS/logs
GATEWAY_BACKUPS_DIR=/opt/ignition-sandbox/backups/VIGVIS

# Performance Settings (Higher for visualization workloads)
MEMORY_MIN=1024m
MEMORY_MAX=4096m
CPU_LIMIT=2.0
MEMORY_RESERVATION=1024m

# Visualization Specific Settings
DEBUG_MODE=false
DEVELOPMENT_MODE=false
KIOSK_MODE=true
AUTO_BACKUP=true

# Trial Management
TRIAL_RESET_PRIORITY=critical
TRIAL_AUTO_RESET=true
TRIAL_EMERGENCY_ENABLED=true

# Security Settings
GATEWAY_SECURITY_LEVEL=production
SSL_REQUIRED=false
AUTHENTICATION_REQUIRED=true

# Logging Configuration
LOG_LEVEL=INFO
GATEWAY_LOG_LEVEL=INFO
CONSOLE_LOGGING=true
FILE_LOGGING=true

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
METRICS_COLLECTION=true

# Networking
NETWORK_MODE=bridge
EXPOSE_PORTS=true
ALLOW_HOST_ACCESS=true

# Visualization Tools
DESIGNER_ENABLED=false
CLIENT_ENABLED=true
WEBDEV_ENABLED=false
VISION_ENABLED=true
PERSPECTIVE_ENABLED=true

# Module Configuration
MODULES_AUTO_INSTALL=false
MODULES_AUTO_UPDATE=false
MODULES_PATH=/opt/ignition-sandbox/modules

# Database Connections (Production)
ALLOW_DB_CONNECTIONS=true
DB_CONNECTION_POOLING=true
MAX_DB_CONNECTIONS=50

# Display Configuration
DISPLAY_TIMEOUT=300
SCREEN_SAVER_ENABLED=false
FULLSCREEN_MODE=true
MULTI_MONITOR_SUPPORT=true

# Tags and Classification
GATEWAY_TAGS=visualization,production,hmi
GATEWAY_TIER=production
GATEWAY_CRITICALITY=high
GATEWAY_OWNER=operations-team

# Startup Configuration
AUTO_START=true
START_DELAY=0
STARTUP_TIMEOUT=180
SHUTDOWN_TIMEOUT=30

# Maintenance Windows
MAINTENANCE_ENABLED=true
MAINTENANCE_WINDOW=03:00-04:00
MAINTENANCE_TIMEZONE=America/Boise