# =============================================================================
# VIGDEV Gateway Configuration
# Development Gateway - Primary development and testing environment
# =============================================================================

# Gateway Identity
GATEWAY_NAME=VIGDEV
GATEWAY_DISPLAY_NAME=VIG Development
GATEWAY_DESCRIPTION=Primary development gateway for testing and development
GATEWAY_ENVIRONMENT=development

# Container Configuration
CONTAINER_NAME=ignition-sandbox_vigdev_1
CONTAINER_HOSTNAME=vigdev
SERVICE_NAME=vigdev

# Port Configuration (IP-based allocation)
HTTP_PORT=8070
HTTPS_PORT=8470
GAN_PORT=8670
TRACE_PORT=10070
METRICS_PORT=11070

# =============================================================================
# IGNITION GATEWAY CONFIGURATION
# =============================================================================

# Core Ignition Settings
ACCEPT_IGNITION_EULA=Y
TZ=America/Boise
GATEWAY_ADMIN_USERNAME=admin
GATEWAY_ADMIN_PASSWORD=password
DISABLE_QUICKSTART=true
GATEWAY_SYSTEM_NAME=VIGDEV
GATEWAY_USESSL=false
GATEWAY_NETWORK_AUTOACCEPT_DELAY=3
GATEWAY_DEBUG_ENABLED=1
GATEWAY_MAX_MEMORY=1024
IGNITION_DATASOURCE_AUTOSTART=false
IGNITION_MODULES_ENABLED=false
IGNITION_DEVICE_CONNECTIONS_ENABLED=false
IGNITION_OPC_UA_SERVER_ENABLED=false

# =============================================================================
# GATEWAY-TO-GATEWAY CONNECTIONS (VIGDEV connects to VIGVIS)
# =============================================================================

# Connection to VIGVIS
GATEWAY_NETWORK_0_HOST=VIGVIS
GATEWAY_NETWORK_0_PORT=8071
GATEWAY_NETWORK_0_PINGRAT=0
GATEWAY_NETWORK_0_ENABLED=true
GATEWAY_NETWORK_0_ENABLESSL=false

# Data Volumes
GATEWAY_DATA_DIR=/opt/ignition-sandbox/gateways/VIGDEV/VIGDEV-data
GATEWAY_LOGS_DIR=/opt/ignition-sandbox/gateways/VIGDEV/logs
GATEWAY_BACKUPS_DIR=/opt/ignition-sandbox/backups/VIGDEV

# Performance Settings
MEMORY_MIN=512m
MEMORY_MAX=2048m
CPU_LIMIT=1.0
MEMORY_RESERVATION=512m

# Development Specific Settings
DEBUG_MODE=true
DEVELOPMENT_MODE=true
HOT_RELOAD=true
AUTO_BACKUP=false

# Trial Management
TRIAL_RESET_PRIORITY=high
TRIAL_AUTO_RESET=true
TRIAL_EMERGENCY_ENABLED=true

# Security Settings
GATEWAY_SECURITY_LEVEL=development
SSL_REQUIRED=false
AUTHENTICATION_REQUIRED=false

# Logging Configuration
LOG_LEVEL=DEBUG
GATEWAY_LOG_LEVEL=DEBUG
CONSOLE_LOGGING=true
FILE_LOGGING=true

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
METRICS_COLLECTION=true

# Networking
NETWORK_MODE=bridge
EXPOSE_PORTS=true
ALLOW_HOST_ACCESS=true

# Development Tools
DESIGNER_ENABLED=true
CLIENT_ENABLED=true
WEBDEV_ENABLED=true
VISION_ENABLED=true
PERSPECTIVE_ENABLED=true

# Module Configuration
MODULES_AUTO_INSTALL=true
MODULES_AUTO_UPDATE=false
MODULES_PATH=/opt/ignition-sandbox/modules

# Database Connections (Development)
ALLOW_DB_CONNECTIONS=true
DB_CONNECTION_POOLING=true
MAX_DB_CONNECTIONS=20

# Tags and Classification
GATEWAY_TAGS=development,testing,primary
GATEWAY_TIER=development
GATEWAY_CRITICALITY=low
GATEWAY_OWNER=development-team

# Startup Configuration
AUTO_START=true
START_DELAY=0
STARTUP_TIMEOUT=120
SHUTDOWN_TIMEOUT=60

# Maintenance Windows
MAINTENANCE_ENABLED=true
MAINTENANCE_WINDOW=02:00-04:00
MAINTENANCE_TIMEZONE=America/Boise