# Environment Configuration for Firebox Dashboard

# Core Configuration
HOST_IP=your.host.ip.here
COMPOSE_PROJECT_NAME=firebox

# Domain Configuration (nip.io automatic DNS)
DASHBOARD_DOMAIN=dashboard.${HOST_IP}.nip.io
API_DOMAIN=api.${HOST_IP}.nip.io
GRAFANA_DOMAIN=grafana.${HOST_IP}.nip.io

# Service Ports (internal)
FRONTEND_PORT=3000
BACKEND_PORT=5000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# Traefik Configuration
TRAEFIK_WEB_PORT=80
TRAEFIK_WEBSECURE_PORT=443
TRAEFIK_DASHBOARD_PORT=8080

# Database Configuration
DB_HOST=postgres
DB_NAME=firebox
DB_USER=firebox
DB_PASSWORD=secure_password_here

# Security
JWT_SECRET=your_jwt_secret_here
CSRF_SECRET=your_csrf_secret_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Trial Reset Configuration
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
RESET_MAX_RETRIES=3

# Gateway Configuration
GATEWAY_CHECK_INTERVAL=30
GATEWAY_TIMEOUT=10

# Monitoring
METRICS_RETENTION=30d
PROMETHEUS_SCRAPE_INTERVAL=15s